<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/apptns_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/apptDate"
            android:layout_below="@+id/apptSalonAddress"
            android:layout_alignLeft="@+id/apptSalonAddress"
            android:layout_alignStart="@+id/apptSalonAddress" />

        <TextView
            android:text="Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/apptTime"
            android:layout_below="@+id/apptDate"
            android:layout_alignLeft="@+id/apptDate"
            android:layout_alignStart="@+id/apptDate" />

        <TextView
            android:maxLines="1"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="Salon Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/apptSalonName"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/apptSalonAddress"
            android:layout_alignStart="@+id/apptSalonAddress" />

        <TextView
            android:maxLines="1"
            android:textSize="18sp"
            android:text="Salon Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/apptSalonAddress"
            android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp"
            android:layout_below="@+id/apptSalonName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/ic_location"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/apptLocation"
            android:layout_marginRight="14dp"
            android:layout_marginEnd="14dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/ic_calender"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/apptCalender"
            android:layout_marginRight="33dp"
            android:layout_marginEnd="33dp"
            android:layout_alignTop="@+id/apptSalonAddress"
            android:layout_toLeftOf="@+id/apptLocation"
            android:layout_toStartOf="@+id/apptLocation" />


    </RelativeLayout>


</android.support.v7.widget.CardView>